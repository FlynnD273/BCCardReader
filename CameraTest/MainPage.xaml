<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CameraTest.MainPage"
						 xmlns:m="clr-namespace:CameraTest.Model">
	<ContentPage.BindingContext>
		<m:CameraModel/>
	</ContentPage.BindingContext>
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Image Source="{Binding CameraImage}" Grid.Row="0"/>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Button Text="Take Photo" Command="{Binding TakeImageCommand}" Grid.Column="0"/>
			<Button Text="Pick Photo" Command="{Binding PickImageCommand}" Grid.Column="1"/>
		</Grid>
	</Grid>
</ContentPage>
